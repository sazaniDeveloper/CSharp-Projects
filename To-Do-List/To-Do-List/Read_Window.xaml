<Window x:Class="To_Do_List.Read_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_Do_List"
        mc:Ignorable="d"
        Title="Read Tasks" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Button Content="Read Tasks" HorizontalAlignment="Left" Margin="228,331,0,0" VerticalAlignment="Top" Height="54" Width="172" Click="Read_Tasks_Click" FontFamily="Calibri" FontSize="20" FontWeight="Bold"/>
        <Button x:Name="Cancel_Button" Content="Cancel " HorizontalAlignment="Left" Margin="436,331,0,0" VerticalAlignment="Top" Height="54" Width="172"  FontSize="20" FontWeight="Bold" FontFamily="Calibri" Click="Cancel_Button_Click"/>
        <TextBox x:Name="Description" HorizontalAlignment="Left" Margin="340,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="242" Height="34" FontFamily="Calibri" FontSize="16"/>
        <Label x:Name="Task_Name_Label" Content="Task Name" HorizontalAlignment="Left" Margin="214,91,0,0" VerticalAlignment="Top" Height="44" Width="121" FontSize="20"/>
        <Label x:Name="Description_Label" Content="Description" HorizontalAlignment="Left" Margin="214,158,0,0" VerticalAlignment="Top" Height="34" Width="112" FontSize="20"/>
        <Label x:Name="Date_Label" Content="Date" HorizontalAlignment="Left" Margin="214,220,0,0" VerticalAlignment="Top" Height="35" Width="105" FontSize="20"/>
        <TextBox x:Name="Task_Name" HorizontalAlignment="Left" Margin="340,96,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="242" Height="34" FontFamily="Calibri" FontSize="16"/>
        <DatePicker x:Name="Date" HorizontalAlignment="Left" Margin="340,220,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="35" Width="242" FontFamily="Calibri" FontSize="16"/>
        <Label x:Name="ID_Label" Content="ID" HorizontalAlignment="Left" Margin="214,32,0,0" VerticalAlignment="Top" Height="44" Width="121" FontSize="20"/>
        <TextBox x:Name="ID_Text" HorizontalAlignment="Left" Margin="340,37,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="242" Height="34" FontFamily="Calibri" FontSize="16"/>
        <Label x:Name="Status_Label" Content="Status" HorizontalAlignment="Left" Margin="222,274,0,0" VerticalAlignment="Top" Height="35" Width="105" FontSize="20"/>
        <CheckBox x:Name="Status_Check" Content="Completed" HorizontalAlignment="Left" Margin="340,285,0,0" VerticalAlignment="Top" Height="23" Width="160" FontFamily="Calibri" FontSize="16"/>

    </Grid>
</Window>
