<Window x:Class="To_Do_List.Add_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_Do_List"
        mc:Ignorable="d"
        Title="Add a New Task" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="72*"/>
            <ColumnDefinition Width="717*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Content="Add Task" HorizontalAlignment="Left" Margin="156,331,0,0" VerticalAlignment="Top" Height="54" Width="172" Click="Add_Task_Click" FontFamily="Calibri" FontSize="20" FontWeight="Bold"/>
        <Button x:Name="Cancel_Button" Grid.Column="1" Content="Cancel " HorizontalAlignment="Left" Margin="364,331,0,0" VerticalAlignment="Top" Height="54" Width="172"  FontSize="20" FontWeight="Bold" FontFamily="Calibri" Click="Cancel_Button_Click"/>
        <TextBox x:Name="Description" Grid.Column="1" HorizontalAlignment="Left" Margin="268,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center"  Width="242" Height="34" FontSize="16" FontFamily="Calibri"/>
        <Label x:Name="Task_Name_Label" Grid.Column="1" Content="Task Name" HorizontalAlignment="Left" Margin="142,56,0,0" VerticalAlignment="Top" Height="36" Width="121" FontSize="20"/>
        <Label x:Name="Description_Label" Grid.Column="1" Content="Description" HorizontalAlignment="Left" Margin="142,120,0,0" VerticalAlignment="Top" Height="59" Width="112" FontSize="20"/>
        <Label x:Name="Date_Label" Grid.Column="1" Content="Date" HorizontalAlignment="Left" Margin="142,184,0,0" VerticalAlignment="Top" Height="33" Width="105" FontSize="20"/>
        <TextBox x:Name="Task_Name" Grid.Column="1" HorizontalAlignment="Left" Margin="268,58,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="242" Height="34" FontFamily="Calibri" FontSize="16"/>
        <DatePicker x:Name="Date" Grid.Column="1" HorizontalAlignment="Left" Margin="268,182,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center"  Height="35" Width="242" FontFamily="Calibri" FontSize="16"/>

    </Grid>
</Window>
