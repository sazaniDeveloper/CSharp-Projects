<Window x:Class="To_Do_List.Remove_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_Do_List"
        mc:Ignorable="d"
        Title="Remove Task" Height="400" Width="500" ResizeMode="NoResize">
    <Grid>
        <Button Content="Delete Task" HorizontalAlignment="Left" Margin="70,265,0,0" VerticalAlignment="Top" Height="54" Width="172" FontFamily="Calibri" FontSize="20" FontWeight="Bold" Click="Remove_Click"/>
        <Button x:Name="Cancel_Button" Content="Cancel " HorizontalAlignment="Left" Margin="278,265,0,0" VerticalAlignment="Top" Height="54" Width="172"  FontSize="20" FontWeight="Bold" FontFamily="Calibri" Click="Cancel_Button_Click"/>
        <Label x:Name="ID_Label" Content="ID" HorizontalAlignment="Left" Margin="115,115,0,0" VerticalAlignment="Top" Height="34" Width="62" FontSize="20"/>
        <TextBox x:Name="ID_Text" HorizontalAlignment="Left" Margin="156,115,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="242" Height="34" FontSize="16" FontFamily="Calibri"/>

    </Grid>
</Window>
